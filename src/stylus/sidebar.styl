.sidebar
  flex-grow: 1
.about
  margin-bottom 70px
  &__title
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    text-align: center;
    color: #171717;
    padding 15px 12px
    border: 1px solid #E5E5E5;
    margin-bottom 20px
  &__content
    box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
  &__content a
    display inline-block
    width 100%
  &__photo
    width 100%
    height 180px
  &__name
    font-family: PT Serif;
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    color: #171717;
    margin-bottom 4px
    text-align: center
    padding 0 20px
  &__position
    font-family: PT Serif;
    font-style: italic;
    font-weight: normal;
    font-size: 14px;
    text-align: center;
    color: #B1B1B1;
    margin-bottom 15px
    padding 0 20px
  &__text
    font-family: PT Sans;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    line-height: 24px;
    text-align: center;
    color: #666666;
    padding 0 20px
    margin-bottom 27px
  &__link
    // display block
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    text-transform: uppercase;
    color: #C9A96E;
    padding 12px
    text-align: center
    border-top 1px solid #E5E5E5
  &__link a
    color #C9A96E

.featured
  padding-bottom 70px
  &__title
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    text-align: center;
    color: #171717;
    padding 15px 12px
    border: 1px solid #E5E5E5;
    margin-bottom 20px
  &__post
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1)
    margin-bottom 30px
    padding-bottom 15px
  &__photo
    width 100%
    margin-bottom 15px
  &__tag
    font-family: PT Sans;
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    text-transform: uppercase;
    color: #C9A96E;
    margin-bottom 4px
    text-align: center
    padding 0 20px
  &__text
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 18px;
    line-height: 26px;
    text-align: center;
    color: #171717;
    margin-bottom 10px
    padding 0 20px
  &__info
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    color: #666666;
    text-align: center
    margin-bottom 14px
    padding 0 20px

.categories
  margin-bottom 70px
  &__title
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    text-align: center;
    color: #171717;
    padding 15px 0
    border: 1px solid #E5E5E5
    margin-bottom 5px
  &__items
    padding 15px 0
    border-bottom: 1px solid #E5E5E5
    display flex
    justify-content space-between
  &__item:last-child
    border-bottom: 0
  &__item
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    color: #666666;

.socialMedia
  padding-bottom 70px
  &__title
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    text-align: center;
    color: #171717;
    padding 15px 12px
    border: 1px solid #E5E5E5;
    margin-bottom 20px
  &__items
    display grid
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 3px
  &__item
    width 88px
    height 88px
    padding 17px
    display flex
    flex-direction: column
    align-items: center
    background: #F8F9FA;
  &__pic
    height 20px
    margin-bottom 6px
  &__text
    text-align: center
    font-family: PT Sans;
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    line-height: 16px;
    color: #999999;

.tags
  &__title
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    text-align: center;
    color: #171717;
    padding 15px 12px
    border: 1px solid #E5E5E5;
    margin-bottom 20px
  &__item
    display inline-block
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    color: #666666;
    padding 6px 15px
    background: #F8F9FA;
    border: none
    margin-right 10px
    margin-bottom 10px
  &__nomargin
    margin-right 0

