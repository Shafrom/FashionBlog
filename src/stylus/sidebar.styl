.sidebar
  flex-grow: 1
.about
  margin-bottom 70px
  &__title
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 16px;
    text-align: center;
    color: #171717;
    padding 15px 73px
    border: 1px solid #E5E5E5;
    margin-bottom 20px
  &__content
    box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
  &__photo
    width 100%
    height 180px
  &__name
    font-family: PT Serif;
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    color: #171717;
    margin-bottom 4px
    text-align: center
    padding 0 20px
  &__position
    font-family: PT Serif;
    font-style: italic;
    font-weight: normal;
    font-size: 14px;
    text-align: center;
    color: #B1B1B1;
    margin-bottom 15px
    padding 0 20px
  &__text
    font-family: PT Sans;
    font-style: normal;
    font-weight: normal;
    font-size: 14px;
    line-height: 24px;
    text-align: center;
    color: #666666;
    padding 0 20px
    margin-bottom 27px
  &__link
    font-family: PT Serif;
    font-style: normal;
    font-weight: normal;
    font-size: 12px;
    text-transform: uppercase;
    color: #C9A96E;
    padding 12px
    text-align: center
  &__link a
    color #C9A96E
